.search-row
  margin-bottom: 12px

.heroes-list 
  margin-bottom: 12px

.btn
  border: 2px solid #000
  padding: 8px 
  cursor: pointer
  font-weight: bold
  background-color: #fff
  vertical-align: middle
  min-width: 170px

  &:disabled
    cursor: default

  img 
    margin-right: 7px

.btn_pressed {
  background-color: #e2e2e2
}

@-webkit-keyframes fadeIn {
  from {
    opacity: 0
  }

  to {
    opacity: 1
  }
}
@keyframes fadeIn {
  from {
    opacity: 0
  }

  to {
    opacity: 1
  }
}
.fadeIn {
  animation: fadein 2s
  -moz-animation: fadein 2s /* Firefox */
  -webkit-animation: fadein 2s /* Safari and Chrome */
  -o-animation: fadein 2s /* Opera */
}
