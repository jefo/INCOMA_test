.hero
  display: flex
  flex-direction: column
  box-sizing: border-box
  margin-bottom: 12px
  min-width: 250px

  &:hover
    .hero__img
      transform: scale(1.1)

  .hero__img
    min-height: 300px
    background-size: cover
    background-position: center center
    transition: all .2s

  .hero__content
    display: flex
    flex-direction: column
    flex: 1 0 auto
    overflow: hidden
    border: 2px solid #000
    border-bottom: none
    position: relative

  .favorite 
    position: absolute
    right: 0
    top: 0
    cursor: pointer
    z-index: 99
    border-bottom: 2px solid #000
    border-left: 2px solid #000
    background-color: #fff
    padding: 3px 5px

  .hero__name
    flex: 1 0 auto
    padding: 0 12px
    border: 2px solid #000
    border-top: none
    margin: 0
    padding: 12px
    font-weight: bold
    text-align: center
